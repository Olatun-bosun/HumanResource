
<div class="btn-group float-end">
    @if (ViewLink != null)
    {
    <a class="@ButtonClass" disabled="@Disabled" href="@ViewLink" title="View">
        <i class="fa fa-eye"></i>
    </a>
    }
    @if (OnEdit.HasDelegate)
    {
    <button class="@ButtonClass" disabled="@Disabled" @onclick="@OnEdit" title="Edit" @onclick:stopPropagation="true">
        <i class="fa fa-edit"></i>
    </button>
    }
    @if (OnDelete.HasDelegate)
    {
    <button class="@ButtonClass" disabled="@Disabled" @onclick="@OnDelete" title="Delete">
        <i class="fa fa-trash"></i>
    </button>
    }
    @if (OnSave.HasDelegate)
    {
    <button class="@ButtonClass" disabled="@Disabled" @onclick="@OnSave" title="Save Changes">
        <i class="fa fa-save"></i>
    </button>
    }
    @if (OnCancel.HasDelegate)
    {
    <button class="@ButtonClass" disabled="@Disabled" @onclick="@OnCancel" title="Cancel Edit">
        <i class="fa fa-times-circle"></i>
    </button>
    }
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }
    [Parameter] public EventCallback OnEdit { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public string ButtonClass { get; set; } = "btn btn-outline-secondary";
    [Parameter] public string? ViewLink { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;
}
